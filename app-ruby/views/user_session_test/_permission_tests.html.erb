<div class="col-xs-4">
    <label>Select your host</label>
    <%= select_tag('permission_test_host', options_for_select(hosts)) %>
    <%= link_to 'Run Side Navigation Test', '', id: 'permissionTest', class: 'btn btn-primary', method: :post, remote: true %>
</div>

<script>

        $('#permissionTest').on('click', function () {
            $('#permissionTestResultsLoad').show();
            var host_url = $('#permission_test_host :selected').text();
            console.log('sending host: ',host_url);
            event.preventDefault();
            $.ajax({
                url: '<%= user_session_permission_test_path %>',
                method: 'POST',
                data: {
                    host_url: host_url
                },
                success: function() {
                    console.log('Successful!');
                },
                error: function(error) {
                    console.log('error: ', error.status);
                }
            });
        });
</script>
